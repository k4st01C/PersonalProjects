<%- include('../partials/header.ejs') %>
<div class="row">
	<div class="col-md-3">
		<div class="card">
			<div class="card-header">YelpCamp</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item active">Cras justo odio</li>
				<li class="list-group-item">Dapibus ac facilisis in</li>
				<li class="list-group-item">Vestibulum at eros</li>
			</ul>
		</div>
	</div>

	<div class="col-md-9">
		<div class="card">
			<img src="<%= campArea.img %>" class="card-img-top" alt="..." />
			<div class="card-body">
				<p class="float-end"><strong>$9.00/night</strong></p>
				<h5 class="card-title"><%= campArea.title %></h5>
				<p class="card-text"><%= campArea.article %></p>
				<p class="card-text">Submitted by <%= campArea.author.username %></p>
				<a
					href="/campgrounds/<%= campArea._id %>/edit"
					class="btn btn-sm btn-warning d-inline-block"
					>Edit
				</a>
				<form class="d-inline-block"
					action="/campgrounds/<%=campArea._id%>?_method=DELETE"
					method="POST"
				>
					<button class="btn btn-danger btn-sm">Delete</button>
				</form>
			</div>
		</div>
		<div class="card bg-light mt-3">
			<div class="card-body">
				<div class="text-end">
					<a
						href="/campgrounds/<%= campArea._id %>/comments/new"
						class="btn btn-success"
						>add comment
					</a>
				</div>
				<hr />
				<% campArea.comments.forEach(e=>{ %>
				<p class="card-text">
					<strong> <%= e.author.username %> </strong> - <%= e.text %>
				</p>
				<%})%>
			</div>
		</div>
	</div>
</div>

<%- include('../partials/footer.ejs') %>
