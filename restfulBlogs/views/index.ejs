<%- include('partials/header.ejs') %>
<h1>
    <a href="/blogs/new">New</a>
</h1>

<div class="ui link cards container">
    <% blogs.forEach(element=>{ %>
        <div class="card">
            <div class="image">
                <img src="<%=element.img%>">
                <a href="blogs/<%=element._id%>">More..
                </a>
            </div>
            <div class="content">
                <div class="header">
                    <%=element.name%>
                </div>
                <form method="DELETE" action="/blogs/<%=element._id%>">
                    <button>delete</button>
                </form>
                <!-- <div class="description">
                    <%=element.article%>
                </div> -->
            </div>
        </div>
        <% }) %>
</div>
<%- include('partials/footer.ejs') %>